@model Bookstore.Models.Genre

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control mb-2" style="box-shadow: none" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-decoration-none">Voltar para a lista de gêneros</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
