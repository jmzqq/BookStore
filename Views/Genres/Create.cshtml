@model Bookstore.Models.Genre

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control mb-2" style="box-shadow: none"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success mt-2 mb-2 px-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-decoration-none">Voltar para a lista de gênero</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}